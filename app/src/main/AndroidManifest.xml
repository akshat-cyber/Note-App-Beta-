<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="aks.fatdevs.noteit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NoteIt">

        <activity android:name=".FrontEnd.screens.noNodeScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FrontEnd.screens.createNode"
            android:screenOrientation="portrait">

        </activity>
        <activity android:name=".FrontEnd.screens.showLiveNodes"
            android:screenOrientation="portrait"
            >
        </activity>
    </application>

</manifest>